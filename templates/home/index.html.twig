{% extends 'base.html.twig' %}

{% block title 'Feed!' %}

{% block body %}
{% for row in articles|batch(3) %}
    <div class="row">
            {% for article in row %}
                <div class="col-md-4 mb-5">
                    <div class="card article overflow-hidden" style="min-height: 285px;">
                    <a href="{{article.link}}" target="_blank">
                        <div class="card-img-caption">
                        <h5 id="{{article.id}}" class="card-text" style="color:#FFF;display:none;pointer-events: none;">{{article.category.nom}}</h5>
                        {% if article.imgUrl %}
                            <img onmouseover="document.getElementById('{{article.id}}').style.display = 'block'" onmouseout="document.getElementById('{{article.id}}').style.display = 'none'" class=" overflow-hidden card-img-top p-2 rounded" src="{{ asset('/upload/img/' ~ article.imgUrl) | imagine_filter('squared_thumbnail_medium') }}" alt="{{ article.title }}">
                        {% else %}
                            <img onmouseover="document.getElementById('{{article.id}}').style.display = 'block'" onmouseout="document.getElementById('{{article.id}}').style.display = 'none'" class=" overflow-hidden card-img-top p-2 rounded" src="{{ asset('/upload/img/no_image.png') | imagine_filter('squared_thumbnail_medium') }}" alt="{{ article.title }}" style="max-height:181.99px;max-width:357,99px">
                        {% endif %}
                        </div>
                    </a>
                    <div class="card-body pt-1 pb-0">
                        <h6 class="card-title">{{article.title}}</h6>
                    </div>
                    <div class="card-footer text-muted row" style="font-size: 10px;">
                        <div class="col-md-6">{{article.creatAt|ago}}</div>
                        <div class="col-md-6 text-right" style="font-size: 15px;">
                            <i class="far fa-comment" style="cursor: pointer;"></i><span>   </span> 
                            <i class="far fa-heart" style="cursor: pointer;"></i>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endfor %}

<div class="fixed-bottom d-flex flex-row-reverse" style="margin: 50px;">
    <button type="button" class="btn btn-primary btn-circle btn-xl" data-toggle="modal" data-target="#exampleModalCenter"><i class="fas fa-plus"></i></button>
</div>


<div class="modal" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header border-0">
        <h5 class="modal-title" id="exampleModalLongTitle">Ajouter un article</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body border-0">
        {% include "./article/_form.html.twig" %}
      </div>
      <div class="modal-footer border-0">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
{% endblock %}
