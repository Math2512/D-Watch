{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}

<div class="row">
    <div class="col-md-6 mx-auto">
         {% for flashError in app.flashes('verify_email_error') %}
            <div class="alert alert-danger" role="alert">{{ flashError }}</div>
        {% endfor %}

        <h1 class="text-center my-5">Register</h1>

        {{ form_start(registrationForm) }}
            {{ form_row(registrationForm.pseudo) }}
            {{ form_row(registrationForm.email) }}
            {{ form_row(registrationForm.plainPassword, {
                label: 'Password'
            }) }}
            {{ form_row(registrationForm.agreeTerms) }}

            <button type="submit" class="btn btn-lg btn-primary btn-block" formnovalidate>Register</button>
        {{ form_end(registrationForm) }}
        <p class="mt-5 mb-3 text-center text-muted">
            Already ahve an account ? <a href="{{ path('app_login') }}">Log In !</a>
        </p>
    </div>
</div>
   
{% endblock %}
